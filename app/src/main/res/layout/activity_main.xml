<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sander.sander_pset1.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
        // put constraints here

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="0dp"
            android:layout_height="495dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_ears"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ears" />

            <ImageView
                android:id="@+id/img_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/body" />

            <ImageView
                android:id="@+id/img_arms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/arms" />
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image">


        <LinearLayout
            android:id="@+id/listRight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/listLeft"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="8dp">

            <CheckBox
                android:id="@+id/hat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hat" />

            <CheckBox
                android:id="@+id/mouth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mouth" />

            <CheckBox
                android:id="@+id/mustache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mustache" />

            <CheckBox
                android:id="@+id/nose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nose" />

            <CheckBox
                android:id="@+id/checkBox26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shoes" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/listLeft"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/listRight"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image">

            <CheckBox
                android:id="@+id/arms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/arms" />

            <CheckBox
                android:id="@+id/ears"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ears" />

            <CheckBox
                android:id="@+id/eyebrows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eyebrows" />

            <CheckBox
                android:id="@+id/eyes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eyes" />

            <CheckBox
                android:id="@+id/glasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/glasses" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
